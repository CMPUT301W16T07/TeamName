<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.teamname.tutortrader" >

    <uses-feature
        android:name="android.hardware.camera"
        android:required="true"/>
    <uses-permission android:name="android.permission.INTERNET" />


    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".AvailableSessionsActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".AddSessionActivity" />
        <activity android:name=".MySessionsActivity" />
        <activity android:name=".CurrentBidsActivity" />
        <activity android:name=".ViewOneSessionActivity" />
        <activity android:name=".BidOnSessionActivity" />
        <activity android:name=".MyProfileActivity" />
        <activity android:name=".EditSessionActivity" />

        <!-- added methods controller as an activity to be sagfe -->
        <activity android:name=".MethodsController" />
        <activity
            android:name=".EditProfileActivity"
            android:label="@string/title_activity_edit_profile" />
        <activity
            android:name=".CreateProfileActivity"
            android:label="@string/title_activity_create_profile" />
        <activity android:name=".ViewBidsActivity" />
        <activity android:name=".ViewImageActivity" />
        <activity
            android:name=".UpcomingSessionsActivity"
            android:label="@string/title_activity_upcoming_sessions" >
        </activity>
    </application>

</manifest>
