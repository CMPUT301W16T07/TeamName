<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:weightSum="1"
    android:background="@color/colorPrimaryDark" >

    <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/ScrollView01"
        android:layout_width="fill_parent"
        android:layout_height="447dp"
        android:layout_weight="1.21"
        android:background="@drawable/black_chalkboard">

        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:orientation="vertical" android:layout_width="fill_parent"
            android:layout_height="fill_parent" >

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/AvailableSessionsButton"
                    android:id="@+id/allSessionsButton" />

            </RelativeLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="32dp"
                android:textAlignment="center"
                android:textSize="25dp"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:id="@+id/subjectTextB" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:textSize="20sp"
                android:textColor="@color/white"
                android:id="@+id/titleBodyB" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:textSize="20sp"
                android:textColor="@color/white"
                android:id="@+id/descriptionBodyB" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:textSize="20sp"
                android:textColor="@color/white"
                android:id="@+id/postedByBodyB" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:textSize="20sp"
                android:textColor="@color/white"
                android:id="@+id/tutorRatingB" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:textSize="20sp"
                android:textColor="@color/white"
                android:id="@+id/bodyEmailB" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:textSize="20sp"
                android:textColor="@color/white"
                android:id="@+id/bodyPhoneB" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="@string/StatusField"
                android:id="@+id/bodyStatusB"
                android:textColor="@color/white"
                android:layout_gravity="center_horizontal" />

            <ImageView
                android:layout_width="279dp"
                android:layout_height="297dp"
                android:id="@+id/sessionImage"
                android:layout_marginLeft="50dp"
                android:layout_marginRight="50dp" />

        </LinearLayout>

    </ScrollView>

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <EditText
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:id="@+id/bidtext"
            android:hint="@string/EnterBidField"
            android:textColorHint="@color/colorAccent"
            android:inputType="numberDecimal"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_toLeftOf="@+id/bidButton"
            android:layout_toStartOf="@+id/bidButton"
            android:textColor="@color/colorAccent" />

        <Button
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:id="@+id/bidButton"
            android:text="@string/BidButton"
            android:layout_alignBottom="@+id/bidtext"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />

    </RelativeLayout>
</LinearLayout>