<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="1"
    android:id="@+id/saveNewSession">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/AddSessionField"
        android:id="@+id/AddNewSession"
        android:layout_gravity="center_horizontal"
        android:layout_weight="0.06"
        android:textAlignment="center"
        android:textIsSelectable="false"
        android:textSize="30dp"
        android:textColor="#080808" />
    <EditText
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:id="@+id/subjectEdit"
        android:layout_alignParentBottom="true"
        android:hint="@string/SubjectField" />
    <EditText
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:id="@+id/descriptionEdit"
        android:layout_alignParentBottom="true"
        android:hint="@string/DescriptionField" />

    <ImageView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/newImage"
        android:layout_weight=".75" />

    <Button
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Take Photo"
        android:layout_weight="0.06"
        android:id="@+id/takePhotoButton"
        android:layout_gravity="left"
 />

    <Button
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="@string/SaveButton"
        android:id="@+id/saveButton"
        android:layout_gravity="center_horizontal"
        android:layout_weight=".06" />

    <Button
        android:layout_width="fill_parent"

        android:layout_height="wrap_content"
        android:text="@string/CancelButton"
        android:id="@+id/cancelAddSession"
        android:layout_gravity="center_horizontal"
        android:layout_weight=".06" />

</LinearLayout>